<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="UseSwitchCompatOrMaterialXml"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp">

        <Button
            android:layout_width="@dimen/_48dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:layout_marginStart="@dimen/_4dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginBottom="@dimen/_4dp"
            app:icon="@drawable/ic_back_arrow"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/yp_black"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:layout_marginStart="@dimen/_52dp"
            android:layout_marginVertical="@dimen/_4dp"
            android:layout_marginEnd="100dp"
            android:paddingTop="@dimen/_8dp"
            android:text="@string/settings_setting"
            android:textSize="@dimen/_26sp"
            android:textStyle="bold"
            android:textColor="@color/yp_black"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/ys_display_medium"/>

        <Button
            android:layout_width="@dimen/_48dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_4dp"
            android:layout_marginVertical="@dimen/_4dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/setting_text"
            android:layout_marginTop="101dp"
            android:text="@string/Т_Темная_тема"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="@dimen/_61dp"
            android:layout_gravity="end"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="18dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            app:icon="@drawable/light_mode"
            style="@style/setting_but"/>

        <TextView
            style="@style/setting_text"
            android:text="@string/Т_Поделиться_приложением"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            app:icon="@drawable/ic_group"
            style="@style/setting_but"/>

        <TextView
            style="@style/setting_text"
            android:text="@string/Т_Написать_в_поддержку"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/setting_text"
            android:text="@string/T_Пользоватеьское_соглашение"/>

        <com.google.android.material.button.MaterialButton
            app:icon="@drawable/ic_arrow"
            style="@style/setting_but"/>
    </FrameLayout>
</LinearLayout>