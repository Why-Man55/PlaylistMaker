<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlist_simple_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_12dp"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/_13dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/playlist_url"
        android:layout_width="@dimen/_45dp"
        android:layout_height="@dimen/_45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/empty_av"
        style="roundedImageView"/>
    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="@dimen/_9dp"
        app:layout_constraintStart_toEndOf="@id/playlist_url"
        app:layout_constraintTop_toTopOf="@id/playlist_url"
        app:layout_constraintBottom_toTopOf="@id/playlist_count"
        android:fontFamily="@font/ys_display_regular"
        tools:text="@string/empty"
        android:textColor="?attr/colorOnSecondary"
        android:textFontWeight="400"
        android:layout_marginStart="@dimen/_8dp"
        android:textSize="@dimen/_16sp"
        android:ellipsize="end"
        android:maxLines="1"
        />
    <TextView
        android:id="@+id/playlist_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/playlist_name"
        app:layout_constraintStart_toEndOf="@id/playlist_url"
        app:layout_constraintBottom_toBottomOf="@id/playlist_url"
        android:fontFamily="@font/ys_display_regular"
        tools:text="@string/empty"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/_11sp"
        android:layout_marginStart="@dimen/_8dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:ellipsize="end"
        android:maxLines="1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>