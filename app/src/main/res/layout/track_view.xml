<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/track_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_12dp"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/_13dp">

    <ImageView
        android:id="@+id/url"
        android:layout_width="@dimen/_45dp"
        android:layout_height="@dimen/_45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="@dimen/_9dp"
        app:layout_constraintStart_toEndOf="@id/url"
        app:layout_constraintTop_toTopOf="@id/url"
        app:layout_constraintBottom_toTopOf="@id/artist"
        app:layout_constraintEnd_toStartOf="@id/select_but"
        android:fontFamily="@font/ys_display_regular"
        tools:text="@string/empty"
        android:textColor="?attr/colorOnSecondary"
        android:textFontWeight="400"
        android:layout_marginStart="@dimen/_8dp"
        android:textSize="@dimen/_16sp"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/url"
        app:layout_constraintBottom_toBottomOf="@id/url"
        app:layout_constraintEnd_toStartOf="@id/point"
        android:fontFamily="@font/ys_display_regular"
        tools:text="@string/empty"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/_11sp"
        android:layout_marginStart="@dimen/_8dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:ellipsize="end"
        android:maxLines="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/artist"
        app:layout_constraintTop_toTopOf="@id/artist"
        app:layout_constraintBottom_toBottomOf="@id/artist"
        app:layout_constraintEnd_toStartOf="@id/time"
        android:id="@+id/point"
        android:src="@drawable/ic_dote"
        app:tint="?attr/colorOnPrimary"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toEndOf="@id/point"
        app:layout_constraintTop_toTopOf="@id/artist"
        app:layout_constraintBottom_toBottomOf="@id/artist"
        app:layout_constraintEnd_toStartOf="@id/select_but"
        tools:text="@string/empty"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/_11sp"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/select_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:importantForAccessibility="no" />

</androidx.constraintlayout.widget.ConstraintLayout>