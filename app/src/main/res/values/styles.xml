<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="main_buttons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:backgroundTint">@color/white</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
    <item name="android:layout_marginTop">@dimen/_8dp</item>
    <item name="android:layout_marginBottom">@dimen/_8dp</item>
    <item name="android:paddingHorizontal">@dimen/_16dp</item>
    <item name="android:textColor">@color/yp_black</item>
    <item name="android:textSize">@dimen/_26sp</item>
    <item name="iconTint">@color/yp_black</item>
    <item name="iconGravity">textStart</item>
    <item name="iconPadding">0dp</item>
    <item name="android:fontFamily">@font/ys_display_regular</item>
    <item name="android:textFontWeight">1000</item>
    <item name="android:textAllCaps">false</item>
    <item name="cornerRadius">@dimen/_16dp</item>
</style>

    <style name="main_frames">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="setting_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_61dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="setting_but"  parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/_61dp</item>
        <item name="android:layout_height">@dimen/_61dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="but_arrow" parent="Widget.AppCompat.Button.Borderless.Colored">

    </style>

    <style name="quite_but" parent="but_arrow">
        <item name="android:layout_width">@dimen/_48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:layout_marginStart">@dimen/_4dp</item>
        <item name="android:layout_marginVertical">@dimen/_4dp</item>
        <item name="icon">@drawable/ic_back_arrow</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="activities_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginVertical">@dimen/_4dp</item>
        <item name="android:paddingTop">@dimen/_8dp</item>
        <item name="android:textSize">@dimen/_26sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="track">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_16dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <style name="search_error_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>
    
    <style name="search_error_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_102dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>