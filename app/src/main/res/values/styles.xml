<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="main_buttons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:backgroundTint">?attr/colorSecondary</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
    <item name="android:layout_marginTop">@dimen/_8dp</item>
    <item name="android:layout_marginBottom">@dimen/_8dp</item>
    <item name="android:paddingHorizontal">@dimen/_16dp</item>
    <item name="android:textColor">@color/yp_black</item>
    <item name="android:textSize">@dimen/_26sp</item>
    <item name="iconTint">@color/yp_black</item>
    <item name="iconGravity">textStart</item>
    <item name="iconPadding">0dp</item>
    <item name="android:fontFamily">@font/ys_display_regular</item>
    <item name="android:textFontWeight">1000</item>
    <item name="android:textAllCaps">false</item>
    <item name="cornerRadius">@dimen/_16dp</item>
</style>

    <style name="main_frames">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="setting_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_61dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="setting_but"  parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/_61dp</item>
        <item name="android:layout_height">@dimen/_61dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="but_arrow" parent="Widget.MaterialComponents.Button.UnelevatedButton">

    </style>
</resources>